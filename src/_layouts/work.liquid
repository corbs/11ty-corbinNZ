
{% include 'head' %}
{% include 'navigation' %}


<main itemscope itemtype="https://schema.org/BlogPosting">
  <div class="bg-white border-b -mt-28">

    <!-- top header -->
    <div class="container pt-32 pb-16 z-10">

      <div class="flex flex-wrap justify-between text-sm">
        <ul class="text-slate-800 tracking-tight flex items-center font-bold ">
          <li><a href="/"><i class="fa-solid fa-house"></i></a><span class="px-4">/</span></li>
          <li><a href="/work" class="hover:underline">work</a><span class="px-4">/</span></li>
          {% if category %}<li><a href="/work/{{ category }}" class="hover:underline">{{ category }}</a><span class="px-4">/</span></li>{% endif %}
          <li class="text-slate-500 block w-28 hover:w-auto font-normal truncate ...">{{ title }}</li>
        </ul>
        <div class="flex items-center ">
          <i class="block fa-regular text-slate-700 fa-calendar mr-2 ml-8 text-lg"></i> <time itemprop="datePublished" class="font-semibold">{{ page.date | date: "%d %b, %Y" }}</time>
          <i class="block fa-regular text-slate-700 fa-folder mr-2 ml-8 text-lg"></i> <span itemprop="keywords" class="font-semibold">{% if category %}{{ category }}{% else %}Blog{% endif %}</span>
        </div>
      </div>

      <h1 itemprop="headline" class="text-slate-800 font-serif text-6xl md:text-7xl lg:text-8xl leading-snug">{{ title }}</h1>

      <!-- info boxes -->
      <ul class="flex pt-4">
      {% if author %}
        <li class="flex items-center">
        <i class="block fa-solid text-slate-700 fa-square-user mr-4" style="font-size: 1.71rem;"></i>
        <div class="pr-6 mr-6 border-r border-slate-300">
        <h4 class="text-sm text-slate-500">Designer</h4>
        <span class="font-semibold">{{ authorsData[author].name }}</span>
        </div>
        </li>
      {%- endif -%}

      {% if client %}
      <li class="flex items-center">
      <i class="block fa-solid text-slate-700 fa-buildings mr-4 text-2xl"></i>
      <div class="pr-6 mr-6 border-r border-slate-300">
      <h4 class="text-sm text-slate-500">Client</h4>
      <time itemprop="datePublished" class="font-semibold">{{ client }}</time>
      </div>
      </li>
      {%- endif -%}

      {% if tools %}
      <li class="flex items-center">
      <i class="block fa-solid text-slate-700 fa-wrench mr-4 text-2xl"></i>
      <div class="pr-6 mr-6">
      <h4 class="text-sm text-slate-500">Tools</h4>
      {% for tool in tools %}
        <span class="font-semibold pr-3">{{ tool }}</span>
      {% endfor %}
      </div>
      </li>
      {%- endif -%}

      </ul>
    </div>
  </div>

  <div class="container z-10">
    {% include 'partial/img',
    path: image,
    imgalt: title,
    2xl: '&w=1500&h=600&fit=crop',
    xl: '&w=400&h=100&fit=crop',
    lg: '&w=100&h=100&fit=crop',
    md: '&w=100&h=100&fit=crop',
    sm: '&w=100&h=100&fit=crop',
    class: 'p-2 border bg-white rounded-md -mt-8'
    %}
  </div>

  <div class="container flex flex-col lg:flex-row my-8">

    <div class="lg:w-3/4 lg:pr-28">

      <div class="flex justify-between items-start mb-8">
        <span itemprop="about" class="block py-1 pl-4 pr-10 border-l-4 border-slate-800 font-serif italic text-xl leading-relaxed">{{ description }}</span>
        <!-- share -->
        {% include 'partial/share', position: 'absolute top-7 left-0', arrow: 'mr-auto ml-10 mt-1' %}
      </div>

      <article itemprop="articleBody" class="prose prose-slate prose-p:text-slate-800 max-w-7xl">

        {{ content }}

      <!-- share -->
      {% include 'partial/share-line' %}
      </article>

    <!-- author -->
    {% if author %}
      <div itemprop="author" itemscope itemtype="https://schema.org/Person"> 
      <div class="flex items-center mt-12 ">
        {% include 'partial/img',
        path: authorsData[author].avatar,
        imgalt: authorsData[author].name,
        class: 'border-4 border-white rounded-md bg-primary p-3 shadow-sm mr-5',
        2xl: '&w=60&h=60&fit=crop',
        xl: '&w=60&h=60&fit=crop',
        lg: '&w=60&h=60&fit=crop',
        md: '&w=60&h=60&fit=crop',
        sm: '&w=60&h=60&fit=crop',
        %}
        <div>
        <h4 itemprop="name" class="pt-1 font-bold"> {{ authorsData[author].name }} </h4>
        <p itemprop="jobTitle" class=""> {{ authorsData[author].position }} </p>
        </div>
      </div>
      <p itemprop="description" class="text-slate-600 pt-5"> {{ authorsData[author].bio }} </p>
      <p itemprop="email" class="text-slate-600 pt-5"> {{ authorsData[author].email }} </p>
      <p itemprop="telephone" class="text-slate-600 pt-5"> {{ authorsData[author].phone }} </p>
      <a itemprop="url" class="text-slate-600 pt-5" href="https://www.linkedin.com/in/{{ authorsData[author].linkedin }}">Follow me </a>
      </div>
    {%- endif -%}


      <!-- Follow us -->
      <div class="my-12">
        <h4 class="text-center font-bold text-3xl pb-4">Follow Agworld</h4>
        {% include 'partial/socmed',
        class: 'text-center',
        linkClass: 'inline-block px-3 py-2 m-1 border-b-4 border-slate-50 hover:border-slate-900'
        %}
      </div>

    </div>

    <!-- Sidebar -->
    <aside class="lg:w-1/4">
      <div class="lg:sticky lg:top-6">
        <div class="mx-auto">
          {% include 'partial/btn',
          url: 'contact',
          text: 'Start today',
          class: 'mb-2 border border-primary-dark bg-primary hover:bg-primary-light hover:shadow w-full text-center py-5 text-xl'
        %}
        <h3 class="font-bold text-2xl text-slate-800 pb-2">Recent</h3>
        {% assign posts = collections.work | reverse %}
        {% assign i = 0 %}
        {% for items in posts limit: 3 %}
        {% if items.url != page.url %}
        {% if i < 2 %}
          <a class="block group mb-8" href="{{ items.url }}">
            {% include 'partial/img',
            path: items.data.image,
            2xl: '&h=220&w=400&fit=crop',
            xl: '&h=220&w=300&fit=crop',
            lg: '&h=280&w=500&fit=crop',
            md: '&h=250&w=800&fit=crop',
            sm: '&h=250&w=700&fit=crop',
            alt: 'Agworld blog',
            class: 'my-3'
            %}
          <h4 class="group-hover:underline text-lg font-medium text-slate-800 leading-snug">{{ items.data.title }}</h4>
          </a>
          {% assign i = i | plus: 1 %}
          {% endif %} 
          {% endif %}
        {% endfor %}
        </div>

        <!-- Email form -->

        <div class="mt-6 max-w-lg mx-auto">
          <p class="pb-3 text-center font-medium mt-6">
            <span class="fa-solid fa-bell text-3xl text-brand pb-3"></span><br />
            Stay up to date with industry news
          </p>
          <form class="flex flex-row lg:flex-col">
            <label for="email-address" class="sr-only">Email address</label>
            <input id="email-address" name="email-address" type="email" autocomplete="email" required
              class="text-sm font-medium w-full rounded border border-slate-400 bg-white px-3 py-2 placeholder-slate-500 shadow-sm focus:border-brand-hover focus:ring-1 focus:ring-brand-hover max-w-full lg:max-w-5xl"
              placeholder="Enter your email">
            <div class="lg:mt-3 rounded-md shadow ml-3 lg:ml-0 lg:w-full sm:flex-shrink-0">
              <button type="submit"
                class="flex w-full items-center justify-center rounded bg-brand px-3 py-2 text-sm font-medium text-white hover:bg-brand-hover border border-brand-dark focus:outline-none focus:ring-2 focus:ring-brand-hover focus:ring-offset-2">Stay up to date</button>
            </div>
          </form>
          <p class="mt-3 text-xs text-slate-600">
            We care about the protection of your data. Read our
            <a href="#" class="font-semibold underline">Privacy Policy.</a>
          </p>
        </div>

      </div>
    </aside>
  </div>
</main>

{% include 'footer' %}

</html>