{% include 'head' %}
{% include 'navigation' %}


<main itemscope itemtype="https://schema.org/BlogPosting">
  <div class="bg-white border-b -mt-28">

    <!-- top header -->
    <div class="container pt-28 pb-16 z-10">

      <div class="flex flex-wrap justify-between text-sm">
        <ul class="text-slate-800 tracking-tight flex items-center font-bold mt-7 mr-4">
          <li><a href="/"><i class="fa-solid fa-house"></i><span class="px-4">/</span></a></li>
          {% if tags %}
          {% for tag in tags limit:2 %}
          {% if tag == 'work' %}
          <li><a href="/work/" class="hover:underline">{{ tag }}</a><span class="px-4">/</span></li>
          {% else %}
          <li><a href="/work/{{ tag }}" class="hover:underline">{{ tag }}</a><span class="px-4">/</span></li>
          {% endif %}
          {% endfor %}
          {% endif %}
          <li class="text-slate-500 block w-28 hover:w-auto font-normal truncate ...">{{ title }}</li>
        </ul>
        <div class="flex items-center text-sm mt-7">
          <i class="block fa-regular text-slate-700 fa-calendar mr-2 text-lg"></i> <time itemprop="datePublished"
            class="font-semibold">{{ page.date | date: "%d %b, %Y" }}</time>
        </div>
      </div>

      <h1 itemprop="headline" class="text-slate-800 mt-3 text-6xl md:text-7xl lg:text-8xl leading-none lg:leading-tight">{{ title }}</h1>

      <!-- info boxes -->
      <ul class="flex flex-wrap pt-4">
        {% if author %}
        <li class="flex items-center my-2">
          <i class="block fa-solid text-slate-700 fa-square-user mr-4 " style="font-size: 1.72rem;"></i>
          <div class="pr-6 mr-6">
            <h4 class="text-sm text-slate-500">Designer</h4>
            <span class="font-semibold">{{ authorsData[author].name }}</span>
          </div>
        </li>
        {%- endif -%}

        {% if client %}
        <li class="flex items-center my-2">
          <i class="block fa-solid text-slate-700 fa-buildings mr-4 text-2xl"></i>
          <div class="pr-6 mr-6">
            <h4 class="text-sm text-slate-500">Client</h4>
            <time itemprop="datePublished" class="font-semibold">{{ client }}</time>
          </div>
        </li>
        {%- endif -%}

        {% if tools %}
        <li class="flex items-center my-2">
          <i class="block fa-solid text-slate-700 fa-hammer-brush mr-4 text-2xl"></i>
          <div class="pr-6 mr-6">
            <h4 class="text-sm text-slate-500">Tools</h4>
            {% for tool in tools %}
            <span class="font-semibold pr-3">{{ tool }}</span>
            {% endfor %}
          </div>
        </li>
        {%- endif -%}

      </ul>
    </div>
  </div>

  <div class="container z-10">
    {% include 'partial/img',
    path: image,
    imgalt: title,
    2xl: '&w=1500&h=600&fit=crop',
    xl: '&w=400&h=100&fit=crop',
    lg: '&w=100&h=100&fit=crop',
    md: '&w=100&h=100&fit=crop',
    sm: '&w=100&h=100&fit=crop',
    class: 'p-2 border bg-white rounded-md -mt-8'
    %}
  </div>

  <div class="container flex flex-col lg:flex-row my-8">

    <div class="lg:w-3/4 lg:pr-28">

      <div class="flex justify-between items-start mb-8">
        <span itemprop="about"
          class="block py-1 pl-4 pr-10 border-l-4 border-slate-800 font-serif italic text-xl leading-relaxed">{{
          description }}</span>
        <!-- share -->
        {% include 'partial/share', position: 'absolute top-7 left-0', arrow: 'mr-auto ml-10 mt-1' %}
      </div>

      <article itemprop="articleBody" class="prose prose-slate prose-p:text-slate-800 max-w-7xl">

        {{ content }}

      </article>

      <!-- author -->
      {% if author %}
      <div itemprop="author" itemscope itemtype="https://schema.org/Person">
        <div class="w-full flex items-center mt-16">
            {% include 'partial/img',
            path: authorsData[author].avatar,
            imgalt: authorsData[author].name,
            class: 'border-4 border-white rounded-md bg-primary p-2 shadow-sm mr-7 lg:mr-5',
            2xl: '&w=40&h=40&fit=crop',
            xl: '&w=40&h=40&fit=crop',
            lg: '&w=40&h=40&fit=crop',
            md: '&w=40&h=40&fit=crop',
            sm: '&w=40&h=40&fit=crop',
            %}
            <div class="w-full flex flex-wrap items-center justify-between">
              <div class="mr-5">
              <h4 itemprop="name" class="pt-1 pb-0 m-0 font-bold"> {{ authorsData[author].name }} </h4>
              <span itemprop="jobTitle" class=""> {{ authorsData[author].position }} </span>
              </div>
              <!-- follow -->
              {% include 'partial/socmed',
              class: '-mx-2 my-2',
              linkClass: 'hover:border-b-2 border-current text-xl'
              %}
            </div>

        </div>
        <p itemprop="description" class="text-slate-600 py-5"> {{ authorsData[author].bio }} </p>
      </div>
      {%- endif -%}

      <!-- More work -->
          <div class="mx-auto max-w-2xl text-center mt-12">
            <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">More work</h2>
            <p class="mt-2 text-lg leading-8 text-gray-600">Learn how to grow your business with our expert advice.</p>
          </div>
          <div
            class="mx-auto mt-16 grid max-w-2xl auto-rows-fr grid-cols-1 gap-8 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
            <article
              class="relative isolate flex flex-col justify-end overflow-hidden rounded bg-gray-900 px-8 pb-8 pt-80 sm:pt-48 lg:pt-80">
              <img
                src="https://images.unsplash.com/photo-1496128858413-b36217c2ce36?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=3603&q=80"
                alt="" class="absolute inset-0 -z-10 h-full w-full object-cover">
              <div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40"></div>
              <div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>

              <div class="flex flex-wrap items-center gap-y-1 overflow-hidden text-sm leading-6 text-gray-300">
                <time datetime="2020-03-16" class="mr-8">Mar 16, 2020</time>
              </div>
              <h3 class="mt-3 text-lg font-semibold leading-6 text-white">
                <a href="#">
                  <span class="absolute inset-0"></span>
                  Boost your conversion rate
                </a>
              </h3>
            </article>

            <!-- More posts... -->
          </div>

    </div>

    <!-- Sidebar -->
    <aside class="lg:w-1/4">
      <div class="lg:sticky lg:top-6">
        <div class="mx-auto">
          {% include 'partial/btn',
          url: 'contact',
          text: 'Start today',
          class: 'mb-2 border border-primary-dark bg-primary hover:bg-primary-light hover:shadow w-full text-center py-5
          font-semibold font-lg'
          %}
          <h3 class="font-bold text-2xl text-slate-800 mt-3">Recent work</h3>
          {% assign posts = collections.work | reverse %}
          {% assign i = 0 %}
          {% for items in posts limit: 3 %}
          {% if items.url != page.url %}
          {% if i < 2 %} <a class="block group mb-8" href="{{ items.url }}">
            {% include 'partial/img',
            path: items.data.image,
            2xl: '&h=220&w=400&fit=crop',
            xl: '&h=220&w=300&fit=crop',
            lg: '&h=280&w=500&fit=crop',
            md: '&h=250&w=800&fit=crop',
            sm: '&h=250&w=700&fit=crop',
            alt: 'Agworld blog',
            class: 'my-3'
            %}
            <p class="group-hover:underline text-lg font-semibold text-slate-800 leading-snug">{{ items.data.title }}
            </p>
            </a>
            {% assign i = i | plus: 1 %}
            {% endif %}
            {% endif %}
            {% endfor %}
        </div>

        <!-- Email form -->

        <div class="mt-6 max-w-lg mx-auto">
          <p class="pb-3 text-center font-medium mt-6">
            <span class="fa-solid fa-bell text-3xl text-brand pb-3"></span><br />
            Stay up to date with industry news
          </p>
          <form class="flex flex-row lg:flex-col">
            <label for="email-address" class="sr-only">Email address</label>
            <input id="email-address" name="email-address" type="email" autocomplete="email" required
              class="text-sm font-medium w-full rounded border border-slate-400 bg-white px-3 py-2 placeholder-slate-500 shadow-sm focus:border-brand-hover focus:ring-1 focus:ring-brand-hover max-w-full lg:max-w-5xl"
              placeholder="Enter your email">
            <div class="lg:mt-3 rounded-md shadow ml-3 lg:ml-0 lg:w-full sm:flex-shrink-0">
              <button type="submit"
                class="flex w-full items-center justify-center rounded bg-brand px-3 py-2 text-sm font-medium text-white hover:bg-brand-hover border border-brand-dark focus:outline-none focus:ring-2 focus:ring-brand-hover focus:ring-offset-2">Stay
                up to date</button>
            </div>
          </form>
          <p class="mt-3 text-xs text-slate-600">
            We care about the protection of your data. Read our
            <a href="#" class="font-semibold underline">Privacy Policy.</a>
          </p>
        </div>

      </div>
    </aside>
  </div>
</main>

{% include 'footer' %}

</html>