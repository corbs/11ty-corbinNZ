---
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /portfolio/{{ tag }}/
---

<div class="container max-w-7xl">
<h2 class="text-center">“{{ tag }}”</h2>
<p class="text-center"><a href="/portfolio">All work</a></p>


<div class="grid lg:grid-cols-3 gap-14 my-16">

{% set taglist = collections[ tag ] %}
{% for post in taglist | reverse %}

    <a href="{{ post.url }}" class="group">
      <picture>
        <source
        srcset="https://corbs.imgix.net/{{ post.data.image }}?auto=format&w=500&h=300&fit=crop 1x,
                  https://corbs.imgix.net/{{ post.data.image }}?auto=format&dpr=2&w=500&h=300&fit=crop 2x"
        media="(min-width: 1536px)"
        >
        <source
        srcset="https://corbs.imgix.net/{{ post.data.image }}?auto=format&w=500&h=300&fit=crop 1x,
                  https://corbs.imgix.net/{{ post.data.image }}?auto=format&dpr=2&w=500&h=300&fit=crop 2x"
          media="(min-width: 1280px)"
        >
        <source
        srcset="https://corbs.imgix.net/{{ post.data.image }}?auto=format&w=500&h=300&fit=crop 1x,
                  https://corbs.imgix.net/{{ post.data.image }}?auto=format&dpr=2&w=500&h=300&fit=crop 2x"
        media="(min-width: 1024px)"
        >
        <source
        srcset="https://corbs.imgix.net/{{ post.data.image }}?auto=format&w=500&h=300&fit=crop 1x,
                  https://corbs.imgix.net/{{ post.data.image }}?auto=format&dpr=2&w=500&h=300&fit=crop 2x"
        media="(min-width: 769px)"
        >
        <source
        srcset="https://corbs.imgix.net/{{ post.data.image }}?auto=format&w=500&h=300&fit=crop 1x,
                    https://corbs.imgix.net/{{ post.data.image }}?auto=format&dpr=2&w=500&h=300&fit=crop 2x"
        media="(min-width: 60px)"
        >
        <img src="https://corbs.imgix.net/{{ post.data.image }}?auto=format&w=500&h=300&fit=crop"
          alt="{% if post.data.description %}{{ post.data.description }}{% else %}Graphic Design Portfolio Work by Corbin Featherstone{% endif %}"
          class="lazyload"
        >
    </picture>
        <p class="text-2xl h3 group-hover:underline">{{ post.data.title }}</p>
        <p class="">{{ post.data.description }}</p>
    </a>
{% endfor %}
</div>

</div>