<header class="z-40 flex justify-between items-center bg-slate-100 border-b ">
    
    <!-- Logo -->
    <a class="cursor-pointer block lg:ml-12 ml-5 px-4 lg:px-5 pt-8 md:pt-10 lg:pt-12 pb-4 lg:pb-5 bg-slate-900 text-primary -mb-5 md:-mb-8" href="/">
        <svg
        class="w-6 md:w-9 fill-current"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 12 12"
      >
      <path class="cls-1" d="M0,0H1V12H0ZM7,1H2V5H7Zm5,5v5H2V6ZM11,7H3v3h8Z"/>
    </svg>

    </a>

    <!-- Navigation -->
    <nav
    class="pr-6"
    x-data="{ isNavOpen: false }"
    >

    <!-- Menu button -->
    <button
      x-on:click="isNavOpen = !isNavOpen"
      type="button"
      aria-label="Navigation menu popup"
      class="flex md:hidden py-3.5 focus:outline-none"
    >
      <svg
        class="h-6 w-6 fill-current"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
      >
        <path
          x-show="isNavOpen"
          fill-rule="evenodd"
          clip-rule="evenodd"
          d="M18.278 16.864a1 1 0 0 1-1.414 1.414l-4.829-4.828-4.828 4.828a1 1 0 0 1-1.414-1.414l4.828-4.829-4.828-4.828a1 1 0 0 1 1.414-1.414l4.829 4.828 4.828-4.828a1 1 0 1 1 1.414 1.414l-4.828 4.829 4.828 4.828z"
        />
        <path
          x-show="!isNavOpen"
          fill-rule="evenodd"
          d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"
        />
      </svg>
    </button>

    <!-- Menu  -->
    <div
      class="md:flex"
      x-bind:class="!isNavOpen ? 'hidden' : 'absolute right-0 top-12 left-0 shadow-xl bg-primary py-12'"
    >
      <ul
      class="md:flex"
      >
      <li
      class="m-4"
      x-bind:class="!isNavOpen ? '' : 'text-3xl text-center py-3 font-bold'"
      >
      <a 
      class="h3 p-2 mx-2 border-current hover:border-b-4" 
      href="/work"
      @click="isNavOpen = false"
      >
      work
      </a>
      <a 
      class="h3 p-2 mx-2 border-current hover:border-b-4" 
      href="/blog"
      @click="isNavOpen = false"
      >
      blog
      </a>
      <a 
      class="h3 p-2 mx-2 border-current hover:border-b-4" 
      href="/pricing"
      @click="isNavOpen = false"
      >
      pricing
      </a>
      <a 
      class="h3 p-2 mx-2 border-current hover:border-b-4" 
      href="/about"
      @click="isNavOpen = false"
      >
      about
      </a>
      <a 
      class="h3 p-2 mx-2 border-current hover:border-b-4" 
      href="/contact"
      @click="isNavOpen = false"
      >
      contact
      </a>
      </li>
      </ul>
    </div>
  </nav>
</header>