<picture>
  <source
  srcset="http://assets.corbin.nz/{{ path }}?auto=format{{ 2xl }} 1x,
            http://assets.corbin.nz/{{ path }}?auto=format&dpr=2{{ 2xl }} 2x"
  media="(min-width: 1536px)"
  >
  <source
  srcset="http://assets.corbin.nz/{{ path }}?auto=format{{ xl }} 1x,
            http://assets.corbin.nz/{{ path }}?auto=format&dpr=2{{ xl }} 2x"
    media="(min-width: 1280px)"
  >
  <source
  srcset="http://assets.corbin.nz/{{ path }}?auto=format{{ lg }} 1x,
            http://assets.corbin.nz/{{ path }}?auto=format&dpr=2{{ lg }} 2x"
  media="(min-width: 1024px)"
  >
  <source
  srcset="http://assets.corbin.nz/{{ path }}?auto=format{{ md }} 1x,
            http://assets.corbin.nz/{{ path }}?auto=format&dpr=2{{ md }} 2x"
  media="(min-width: 769px)"
  >
  <source
  srcset="http://assets.corbin.nz/{{ path }}?auto=format{{ sm }} 1x,
              http://assets.corbin.nz/{{ path }}?auto=format&dpr=2{{ sm }} 2x"
  media="(min-width: 60px)"
  >
  <img src="http://assets.corbin.nz/{{ path }}?auto=format{{ xl }}"
    alt="{% if imgalt %}{{ imgalt }}{% else %}Graphic Design Portfolio Work by Corbin Featherstone{% endif %}"
    class="lazyload {{ class }}"
  >
</picture>