<picture>
  <source srcset="https://corbs.imgix.net/{{ path }}?auto=format&w=1004&h=470&fit=crop 1x,
                  https://corbs.imgix.net/{{ path }}?auto=format&dpr=2&w=950&h=470&fit=crop 2x"
                  media="(min-width: 1536px)">
  <source srcset="https://corbs.imgix.net/{{ path }}?auto=format&w=1500&h=600&fit=crop 1x,
                  https://corbs.imgix.net/{{ path }}?auto=format&dpr=2&w=1500&h=600&fit=crop 2x"
                  media="(min-width: 1280px)">
  <source srcset="https://corbs.imgix.net/{{ path }}?auto=format&w=1500&h=200&fit=crop 1x,
                  https://corbs.imgix.net/{{ path }}?auto=format&dpr=2&w=1500&h=200&fit=crop 2x"
                  media="(min-width: 1024px)">
  <source srcset="https://corbs.imgix.net/{{ path }}?auto=format&w=500&h=600&fit=crop 1x,
                  https://corbs.imgix.net/{{ path }}?auto=format&dpr=2&w=500&h=600&fit=crop 2x"
                  media="(min-width: 769px)">
  <source srcset="https://corbs.imgix.net/{{ path }}?auto=format&w=200&h=200&fit=crop 1x,
                  https://corbs.imgix.net/{{ path }}?auto=format&dpr=2&w=200&h=200&fit=crop 2x"
                  media="(min-width: 60px)">
  <img
    src="https://agw.imgix.net/{{ path }}?auto=format&w=1500&h=600&fit=crop"
    alt="{% if imgalt %}{{ imgalt }}{% else %}Corbin Featherstone | Senior designer{% endif %}"
  class="lazyload mt-5 {% if class %}{{ class }}{% endif %}">

  {% if caption %}
  <p class="font-serif text-lg italic pl-4 border-l-4 border-slate-600 py-1 mt-3 mb-5">{{ caption }}</p>
  {% endif %}
</picture>