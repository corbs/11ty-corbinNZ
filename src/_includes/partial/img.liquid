<picture>
  <source
  srcset="https://agw.imgix.net/ad/cnz/{{ path }}?auto=format{{ 2xl }}"
  media="(min-width: 1536px)"
  >
  <source
    srcset="https://agw.imgix.net/ad/cnz/{{ path }}?auto=format{{ xl }}"
    media="(min-width: 1280px)"
  >
  <source
    srcset="https://agw.imgix.net/ad/cnz/{{ path }}?auto=format{{ lg }}"
    media="(min-width: 1024px)"
  >
  <source
    srcset="https://agw.imgix.net/ad/cnz/{{ path }}?auto=format{{ md }}"
    media="(min-width: 769px)"
  >
  <source
    srcset="https://agw.imgix.net/ad/cnz/{{ path }}?auto=format{{ sm }}"
    media="(max-width: 769px)"
  >
  <img src="https://agw.imgix.net/ad/cnz/{{ path }}?auto=format{{ xl }}"
    alt="{% if imgalt %}{{ imgalt }}{% else %}Graphic Design Portfolio Work by Corbin Featherstone{% endif %}"
    class="lazyload {{ class }}"
  >
</picture>