<picture>
  <source
  srcset="https://corbs.imgix.net/{{ path }}?q=0&auto=format{{ 2xl }}&blur=200&px=20,
          https://corbs.imgix.net/{{ path }}?auto=format{{ 2xl }}&wm=webp&lossless=0 1x,
          https://corbs.imgix.net/{{ path }}?auto=format&dpr=2{{ 2xl }}&wm=webp&lossless=0 2x"
  media="(min-width: 1536px)"
  >
  <source
  srcset="https://corbs.imgix.net/{{ path }}?q=0&auto=format{{ xl }}&blur=200&px=20,
          https://corbs.imgix.net/{{ path }}?auto=format{{ xl }}&wm=webp&lossless=0 1x,
          https://corbs.imgix.net/{{ path }}?auto=format&dpr=2{{ xl }}&wm=webp&lossless=0 2x"
    media="(min-width: 1280px)"
  >
  <source
  srcset="https://corbs.imgix.net/{{ path }}?auto=format{{ lg }}&wm=webp&lossless=0 1x,
            https://corbs.imgix.net/{{ path }}?auto=format&dpr=2{{ lg }}&wm=webp&lossless=0 2x"
  media="(min-width: 1024px)"
  >
  <source
  srcset="https://corbs.imgix.net/{{ path }}?auto=format{{ md }}&wm=webp&lossless=0 1x,
            https://corbs.imgix.net/{{ path }}?auto=format&dpr=2{{ md }}&wm=webp&lossless=0 2x"
  media="(min-width: 769px)"
  >
  <source
  srcset="https://corbs.imgix.net/{{ path }}?auto=format{{ sm }}&wm=webp&lossless=0 1x,
              https://corbs.imgix.net/{{ path }}?auto=format&dpr=2{{ sm }}&wm=webp&lossless=0 2x"
  media="(min-width: 60px)"
  >
  <img src="https://corbs.imgix.net/{{ path }}?auto=format{{ xl }}"
    alt="{% if imgalt %}{{ imgalt }}{% else %}Graphic Design Portfolio Work by Corbin Featherstone{% endif %}"
    class="lazyload {{ class }}"
  >
</picture>