  <div class="container py-20">
    
    <p class="h5">{{ tags }}</p>
    <h1 class="pb-16 text-transparent bg-clip-text bg-gradient-to-r from-pink-400 to-primary-dark">{{ description }}</h1>

    <div class="flex">
  <div class="border rounded p-8">
    <h5>Sidebar</h5>

  </div>
  <main class="flex">
    <div class="w-auto lg:px-12">     
      {% include 'partial/img',
      path: imghero,
      2xl: '&w=900&h=410&fit=crop',
      xl: '&w=420&h=400&fit=crop',
      lg: '&w=500&h=420&fit=crop',
      md: '&w=400&h=300&fit=crop',
      sm: '&w=380&h=280&fit=crop',
      class: 'p-2 bg-white border border-gray-200 rounded'
      %}
      <h2>{{ title }}</h2>
      {{ content }}
    </div>
    <div class="w-2/6 bg-white border rounded">
      {% for work in collections.recent | limit(2) %} 
      <a href={{ work.url}}>
        {% include 'partial/img',
        path: work.data.imghero,
        2xl: '&w=510&h=510&fit=crop',
        xl: '&w=420&h=400&fit=crop',
        lg: '&w=500&h=420&fit=crop',
        md: '&w=400&h=300&fit=crop',
        sm: '&w=380&h=280&fit=crop',
        class: 'transition duration-500 ease-in-out group-hover:scale-105'
        %}
      </a>
      {% endfor %}
    </div>
  </main>

